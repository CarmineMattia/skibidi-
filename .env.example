# ============================================
# SKIBIDI ORDERS - Environment Configuration
# ============================================
# Copy this file to .env and fill in the values
# NEVER commit .env with real values to version control
# ============================================

# ============================================
# SUPABASE CONFIGURATION
# ============================================

# Supabase Project URL
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Supabase Anon Key (safe to expose, protected by RLS)
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase Publishable Key (modern, recommended)
EXPO_PUBLIC_SUPABASE_PUBLISHABLE_KEY=your-publishable-key-here

# Supabase Service Role Key (NEVER use in client code!)
# Only for server-side/Edge Functions
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================
# FISCAL INTEGRATION (Italian Compliance)
# ============================================

# Enable/disable fiscalization (true/false)
EXPO_PUBLIC_FISCAL_ENABLED=true

# Fiscal provider: 'mock', 'acube', 'fatture-in-cloud', 'epson'
EXPO_PUBLIC_FISCAL_PROVIDER=mock

# Mock mode for testing (true/false)
# Set to 'true' for development, 'false' for production
EXPO_PUBLIC_FISCAL_MOCK_MODE=true

# ACube API Configuration (when mock_mode = false)
EXPO_PUBLIC_FISCAL_ACUBE_API_KEY=your-acube-api-key
EXPO_PUBLIC_FISCAL_ACUBE_API_ENDPOINT=https://api.acubeapi.com/v1

# FattureInCloud API Configuration (when mock_mode = false)
EXPO_PUBLIC_FISCAL_FATTURE_API_KEY=your-fatture-in-cloud-key
EXPO_PUBLIC_FISCAL_FATTURE_API_ENDPOINT=https://api.fattureincloud.it/v1

# Epson RT Configuration (when mock_mode = false)
# For direct HTTP connection to Epson Registratori Telematici
EXPO_PUBLIC_FISCAL_EPSON_IP=192.168.1.100
EXPO_PUBLIC_FISCAL_EPSON_PORT=8080

# Retry configuration for failed fiscalizations
EXPO_PUBLIC_FISCAL_RETRY_MAX_ATTEMPTS=5
EXPO_PUBLIC_FISCAL_RETRY_DELAY_SECONDS=60

# Enable receipt voiding (storno)
EXPO_PUBLIC_FISCAL_VOID_ENABLED=true

# ============================================
# APPLICATION CONFIGURATION
# ============================================

# App name
EXPO_PUBLIC_APP_NAME=Skibidi Orders

# API timeout in milliseconds
EXPO_PUBLIC_API_TIMEOUT=30000

# Enable debug mode (shows extra logging)
EXPO_PUBLIC_DEBUG_MODE=false

# ============================================
# STORAGE (Optional - for product images)
# ============================================

# Supabase Storage bucket for product images
EXPO_PUBLIC_STORAGE_BUCKET_PRODUCTS=product-images

# Maximum image size in bytes (5MB)
EXPO_PUBLIC_MAX_IMAGE_SIZE=5242880

# ============================================
# FEATURE FLAGS (Future Features)
# ============================================

# Enable offline mode (requires Phase 4 implementation)
EXPO_PUBLIC_OFFLINE_MODE_ENABLED=false

# Enable payment gateway (requires Phase 3 implementation)
EXPO_PUBLIC_PAYMENT_GATEWAY_ENABLED=false

# Payment provider: 'stripe', 'satispay', 'bonifico'
EXPO_PUBLIC_PAYMENT_PROVIDER=stripe